{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "env": {
    "jest": true
  },
  "rules": {
    "no-undef": ["warn"],
    "no-console": ["warn"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "import/order": [
      "error",
      {
        "groups": [
          ["builtin", "external"],
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always",
        "alphabetize": { "order": "asc" }
      }
    ]
  }
}
